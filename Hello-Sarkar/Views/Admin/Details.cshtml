@model AdminDetailsViewModel

@{
    ViewBag.Title = "Issue Details";
}


<div class="row justify-content-sm-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Issue.Subject</h1>
            </div>

            <div class="card-body text-center">
                <h4>Issue no: @Model.Issue.ID</h4>
                <h4>Location: @Model.Issue.Street ,@Model.Issue.Place ,@Model.Issue.District</h4>
                <br />
                <hr />
                <h4> @Model.Issue.IssueDetails</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="admin" asp-action="index" class="btn btn-primary">Back</a>
                @{
                    var next = Model.Issue.ID + 1;
                    var previous = Model.Issue.ID - 1;
                    if (Model.Issue.ID > Model.Total)
                    {
                        <a asp-controller="admin" asp-action="details" asp-route-id="@previous" class="btn btn-primary">Previous</a>
                    }
                    else if (Model.Issue.ID < 1)
                    {
                        <a asp-controller="admin" asp-action="details" asp-route-id="@next" class="btn btn-primary">Next</a>
                    }
                    else
                    {
                        <a asp-controller="admin" asp-action="details" asp-route-id="@previous" class="btn btn-primary">Previous</a>
                        <a asp-controller="admin" asp-action="details" asp-route-id="@next" class="btn btn-primary">Next</a>
                    }

                }
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>