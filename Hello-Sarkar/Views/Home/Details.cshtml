@model NewsDetailsViewModel

@{
    ViewBag.Title = "News Info";
}


<div class="row justify-content-sm-center m-3">
    <div class="col-sm-8">
        <div class="card bg-success">
            <div class="card-header text-center text-white">
                <h1>@Model.News.Title</h1>
            </div>

            <div class="card-body text-center text-white">
                <h4> @Model.News.Info</h4>
                <hr>
                <h6 class="text-left">Source: @Model.News.Source</h6>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-dark">Back</a>
                @{
                    var next = Model.News.Id + 1;
                    var previous = Model.News.Id - 1;
                }
                <a asp-controller="home" asp-action="Details" asp-route-id="@previous" class="btn btn-primary">Previous</a>
                <a asp-controller="home" asp-action="Details" asp-route-id="@next" class="btn btn-primary">Next</a>
            </div>
        </div>
    </div>
</div>