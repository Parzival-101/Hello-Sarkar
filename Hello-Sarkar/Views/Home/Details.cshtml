@model NewsDetailsViewModel

@{
    ViewBag.Title = "News Info";
}


<div class="row justify-content-sm-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.News.Title</h1>
            </div>

            <div class="card-body text-center">
                <h4>Source: @Model.News.Source</h4>
                <br />
                <hr />
                <h4> @Model.News.Info</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-outline-secondary">Back</a>
                @{
                    var next = Model.News.Id + 1;
                    var previous = Model.News.Id - 1;
                }
                <a asp-controller="home" asp-action="Details" asp-route-id="@previous" class="btn btn-outline-primary">Previous</a>
                <a asp-controller="home" asp-action="Details" asp-route-id="@next" class="btn btn-outline-primary">Next</a>
            </div>
        </div>
    </div>
</div>