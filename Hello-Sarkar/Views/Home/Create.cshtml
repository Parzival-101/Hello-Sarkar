@model Issue

@{
    ViewBag.Title = "New Issue";
}

<form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Subject" class="form-control" placeholder="Enter problem you have " />
            <span asp-validation-for="Subject"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="IssueDetails" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="IssueDetails" class="form-control" placeholder="Description for News" />
            <span asp-validation-for="IssueDetails"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Street" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Street" class="form-control" placeholder="Street ex:nawaprabhat marg" />
            <span asp-validation-for="Street"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Place" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Place" class="form-control" placeholder="Place ex:koteshwor" />
            <span asp-validation-for="Place"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Street" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="District" asp-items="Html.GetEnumSelectList<Dstrc>()"></select>
            <span asp-validation-for="District"></span>
        </div>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Create </button>
        <button asp-action="index" asp-controller="Home" class="btn btn-primary btn-danger">Cancel </button>
    </div>
</form>